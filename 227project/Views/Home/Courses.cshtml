@model IEnumerable<Course>

@{
    ViewData["Title"] = "Available Courses";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-8">
                <h1 class="display-4 fw-bold mb-3">Available Courses</h1>
                <p class="lead mb-4">Discover our comprehensive collection of programming and web development courses designed to enhance your skills and advance your career.</p>
                @if (!User.Identity.IsAuthenticated)
                {
                    <div class="d-flex gap-3">
                        <a asp-controller="Account" asp-action="Register" class="btn btn-light btn-lg">
                            <i class="fas fa-user-plus me-2"></i>Get Started
                        </a>
                        <a asp-controller="Account" asp-action="Login" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-sign-in-alt me-2"></i>Login
                        </a>
                    </div>
                }
            </div>
            <div class="col-lg-4 text-center">
                <i class="fas fa-graduation-cap fa-10x opacity-75"></i>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    @if (!string.IsNullOrEmpty(course.ImageUrl))
                    {
                        <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                        <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 200px; display: none;">
                            <i class="fas fa-book fa-3x text-white"></i>
                        </div>
                    }
                    else
                    {
                        <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 200px;">
                            <i class="fas fa-book fa-3x text-white"></i>
                        </div>
                    }
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@course.Title</h5>
                        <p class="card-text text-muted">
                            <span class="badge bg-secondary">@course.Category</span>
                        </p>
                        <p class="card-text flex-grow-1">@(course.Description.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)</p>
                        
                        <div class="mt-auto">
                            <small class="text-muted">
                                <i class="fas fa-user me-1"></i>@course.Instructor.FirstName @course.Instructor.LastName
                            </small>
                            <br>
                            <small class="text-muted">
                                <i class="fas fa-calendar me-1"></i>@course.CreatedAt.ToString("MMM dd, yyyy")
                            </small>
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="d-grid">
                            <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-primary">
                                <i class="fas fa-eye me-2"></i>View Course Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="text-center py-5">
            <i class="fas fa-book fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">No courses available</h4>
            <p class="text-muted">Check back later for new courses!</p>
        </div>
    }
</div>
