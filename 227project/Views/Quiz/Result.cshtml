@model QuizAttempt

@{
    ViewData["Title"] = "Quiz Result";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-success text-white">
                <h3 class="mb-0">
                    <i class="fas fa-check-circle me-2"></i>Quiz Completed!
                </h3>
            </div>
            <div class="card-body">
                <div class="row text-center mb-4">
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h4 class="text-primary">@Model.Score%</h4>
                                <small class="text-muted">Final Score</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h4 class="text-success">@Model.CorrectAnswers</h4>
                                <small class="text-muted">Correct Answers</small>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h4 class="text-info">@Model.TotalQuestions</h4>
                                <small class="text-muted">Total Questions</small>
                            </div>
                        </div>
                    </div>
                </div>

                <h5>Quiz Details</h5>
                <ul class="list-group list-group-flush mb-4">
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Quiz:</span>
                        <span>@Model.Quiz.Title</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Course:</span>
                        <span>@Model.Quiz.Course.Title</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Attempt Number:</span>
                        <span>@Model.AttemptNumber</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between">
                        <span>Completed At:</span>
                        <span>@Model.CompletedAt?.ToString("MMM dd, yyyy HH:mm")</span>
                    </li>
                </ul>

                <h5>Answer Review</h5>
                <div class="accordion" id="answerAccordion">
                    @for (int i = 0; i < Model.Answers.Count; i++)
                    {
                        var answer = Model.Answers.ElementAt(i);
                        var question = answer.Question;
                        <div class="accordion-item">
                            <h2 class="accordion-header" id="heading@(i)">
                                <button class="accordion-button @(i == 0 ? "" : "collapsed")" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(i)" aria-expanded="@(i == 0 ? "true" : "false")" aria-controls="collapse@(i)">
                                    Question @(i + 1): @question.QuestionText
                                    @if (answer.IsCorrect)
                                    {
                                        <span class="badge bg-success ms-2">Correct</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger ms-2">Incorrect</span>
                                    }
                                </button>
                            </h2>
                            <div id="collapse@(i)" class="accordion-collapse collapse @(i == 0 ? "show" : "")" aria-labelledby="heading@(i)" data-bs-parent="#answerAccordion">
                                <div class="accordion-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Your Answer:</strong> @answer.SelectedAnswer</p>
                                            <p><strong>Correct Answer:</strong> @question.CorrectAnswer</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Options:</strong></p>
                                            <ul class="list-unstyled">
                                                <li>A) @question.OptionA</li>
                                                <li>B) @question.OptionB</li>
                                                <li>C) @question.OptionC</li>
                                                <li>D) @question.OptionD</li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>

                <div class="text-center mt-4">
                    <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Quiz.CourseId" class="btn btn-primary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Course
                    </a>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-primary">
                        <i class="fas fa-tachometer-alt me-2"></i>Dashboard
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
