@model IEnumerable<Quiz>

@{
    ViewData["Title"] = "Quizzes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-question-circle me-2"></i>Quizzes</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
    {
        <a asp-action="Create" asp-route-courseId="@ViewBag.CourseId" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Quiz
        </a>
    }
</div>

<div class="row">
    @foreach (var quiz in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="card-title mb-0">@quiz.Title</h5>
                </div>
                <div class="card-body d-flex flex-column">
                    <p class="card-text">@quiz.Description</p>
                    
                    <div class="mt-auto">
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <small class="text-muted">
                                    <i class="fas fa-clock me-1"></i>@quiz.TimeLimitMinutes min
                                </small>
                            </div>
                            <div class="col-4">
                                <small class="text-muted">
                                    <i class="fas fa-redo me-1"></i>@quiz.MaxAttempts attempts
                                </small>
                            </div>
                            <div class="col-4">
                                <small class="text-muted">
                                    <i class="fas fa-question me-1"></i>@quiz.Questions.Count questions
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@quiz.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                        
                        @if (User.IsInRole("Student"))
                        {
                            <a asp-action="Take" asp-route-id="@quiz.Id" class="btn btn-success btn-sm">
                                <i class="fas fa-play me-1"></i>Take Quiz
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-question-circle fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No quizzes available</h4>
        <p class="text-muted">Check back later for new quizzes!</p>
    </div>
}
