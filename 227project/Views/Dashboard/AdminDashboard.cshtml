@model AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</h2>
        <p class="text-muted">Welcome to the admin panel. Manage your learning management system.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalUsers</h4>
                        <p class="mb-0">Total Users</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-success text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalCourses</h4>
                        <p class="mb-0">Total Courses</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalEnrollments</h4>
                        <p class="mb-0">Total Enrollments</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-graduation-cap fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-book me-2"></i>Recent Courses</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentCourses.Any())
                {
                    @foreach (var course in Model.RecentCourses)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6 class="mb-1">@course.Title</h6>
                                <small class="text-muted">@course.Category - @course.Instructor.FirstName @course.Instructor.LastName</small>
                            </div>
                            <div class="text-end">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-book fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No courses available.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Popular Courses</h5>
            </div>
            <div class="card-body">
                @if (Model.PopularCourses.Any())
                {
                    @foreach (var course in Model.PopularCourses)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6 class="mb-1">@course.Title</h6>
                                <small class="text-muted">@course.Enrollments.Count(e => e.IsActive) students enrolled</small>
                            </div>
                            <div class="text-end">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-chart-line fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No course data available.</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-user-plus me-2"></i>Recent Users</h5>
            </div>
            <div class="card-body">
                @if (Model.RecentUsers.Any())
                {
                    @foreach (var user in Model.RecentUsers)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6 class="mb-1">@user.FirstName @user.LastName</h6>
                                <small class="text-muted">@user.Email</small>
                            </div>
                            <div class="text-end">
                                <small class="text-muted">@user.CreatedAt.ToString("MMM dd, yyyy")</small>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-user-plus fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No users available.</p>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-controller="Course" asp-action="Create" class="btn btn-outline-primary">
                        <i class="fas fa-plus me-2"></i>Create New Course
                    </a>
                    <a asp-controller="Course" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-list me-2"></i>Manage Courses
                    </a>
                    <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-info">
                        <i class="fas fa-user-edit me-2"></i>Manage Profile
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
