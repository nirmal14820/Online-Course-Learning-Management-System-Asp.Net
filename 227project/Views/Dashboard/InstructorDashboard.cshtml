@model InstructorDashboardViewModel

@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="row mb-4">
    <div class="col-12">
        <h2><i class="fas fa-chalkboard-teacher me-2"></i>Instructor Dashboard</h2>
        <p class="text-muted">Manage your courses and track student progress.</p>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-3">
        <div class="card bg-primary text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.MyCourses</h4>
                        <p class="mb-0">My Courses</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-book fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="col-md-3">
        <div class="card bg-info text-white">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <div>
                        <h4>@Model.TotalStudents</h4>
                        <p class="mb-0">Total Students</p>
                    </div>
                    <div class="align-self-center">
                        <i class="fas fa-users fa-2x"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-book me-2"></i>My Courses</h5>
            </div>
            <div class="card-body">
                @if (Model.MyCoursesList.Any())
                {
                    @foreach (var course in Model.MyCoursesList)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <h6 class="mb-1">@course.Title</h6>
                                <small class="text-muted">@course.Category - @course.Enrollments.Count(e => e.IsActive) students</small>
                            </div>
                            <div class="text-end">
                                <a asp-controller="Course" asp-action="Details" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary">
                                    View
                                </a>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-3">
                        <i class="fas fa-book fa-2x text-muted mb-2"></i>
                        <p class="text-muted">No courses created yet.</p>
                        <a asp-controller="Course" asp-action="Create" class="btn btn-primary">Create Your First Course</a>
                    </div>
                }
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Course Statistics</h5>
            </div>
            <div class="card-body">
                <div class="text-center py-3">
                    <i class="fas fa-chart-line fa-2x text-muted mb-2"></i>
                    <p class="text-muted">Course analytics and statistics will be displayed here.</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="fas fa-cogs me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <a asp-controller="Course" asp-action="Create" class="btn btn-outline-primary w-100 mb-2">
                            <i class="fas fa-plus me-2"></i>Create Course
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Course" asp-action="Index" class="btn btn-outline-secondary w-100 mb-2">
                            <i class="fas fa-list me-2"></i>Manage Courses
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Account" asp-action="Profile" class="btn btn-outline-info w-100 mb-2">
                            <i class="fas fa-user-edit me-2"></i>Profile Settings
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
