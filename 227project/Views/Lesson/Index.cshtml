@model IEnumerable<Lesson>

@{
    ViewData["Title"] = "Lessons";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-play-circle me-2"></i>Lessons</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
    {
        <a asp-action="Create" asp-route-courseId="@ViewBag.CourseId" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Add New Lesson
        </a>
    }
</div>

<div class="row">
    @foreach (var lesson in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                {
                    <div class="card-img-top bg-dark d-flex align-items-center justify-content-center" style="height: 150px;">
                        <i class="fas fa-play-circle fa-3x text-white"></i>
                    </div>
                }
                else
                {
                    <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 150px;">
                        <i class="fas fa-file-text fa-3x text-white"></i>
                    </div>
                }
                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@lesson.Title</h5>
                    <p class="card-text flex-grow-1">@(lesson.Content.Length > 100 ? lesson.Content.Substring(0, 100) + "..." : lesson.Content)</p>
                    
                    <div class="mt-auto">
                        <small class="text-muted">
                            <i class="fas fa-sort-numeric-up me-1"></i>Lesson @lesson.Order
                        </small>
                        @if (!string.IsNullOrEmpty(lesson.VideoUrl))
                        {
                            <br>
                            <small class="text-muted">
                                <i class="fas fa-video me-1"></i>Video Available
                            </small>
                        }
                    </div>
                </div>
                
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@lesson.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Lesson
                        </a>
                        
                        @if (User.IsInRole("Admin") || (User.IsInRole("Instructor") && lesson.Course.InstructorId == User.Identity.Name))
                        {
                            <a asp-action="Edit" asp-route-id="@lesson.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-play-circle fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No lessons available</h4>
        <p class="text-muted">Check back later for new lessons!</p>
    </div>
}
