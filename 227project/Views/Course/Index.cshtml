@model IEnumerable<Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-book me-2"></i>Courses</h2>
    @if (User.IsInRole("Admin") || User.IsInRole("Instructor"))
    {
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-2"></i>Create New Course
        </a>
    }
</div>

<div class="row">
    @foreach (var course in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                @if (!string.IsNullOrEmpty(course.ImageUrl))
                {
                    <img src="@course.ImageUrl" class="card-img-top" alt="@course.Title" style="height: 200px; object-fit: cover;" onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                    <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 200px; display: none;">
                        <i class="fas fa-book fa-3x text-white"></i>
                    </div>
                }
                else
                {
                    <div class="card-img-top bg-primary d-flex align-items-center justify-content-center" style="height: 200px;">
                        <i class="fas fa-book fa-3x text-white"></i>
                    </div>
                }
                
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@course.Title</h5>
                    <p class="card-text text-muted">@course.Category</p>
                    <p class="card-text flex-grow-1">@(course.Description.Length > 100 ? course.Description.Substring(0, 100) + "..." : course.Description)</p>
                    
                    <div class="mt-auto">
                        <small class="text-muted">
                            <i class="fas fa-user me-1"></i>@course.Instructor.FirstName @course.Instructor.LastName
                        </small>
                        <br>
                        <small class="text-muted">
                            <i class="fas fa-calendar me-1"></i>@course.CreatedAt.ToString("MMM dd, yyyy")
                        </small>
                    </div>
                </div>
                
                <div class="card-footer">
                    <div class="d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@course.Id" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                        
                        @if (User.IsInRole("Admin") || (User.IsInRole("Instructor") && course.InstructorId == User.Identity.Name))
                        {
                            <a asp-action="Edit" asp-route-id="@course.Id" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="text-center py-5">
        <i class="fas fa-book fa-3x text-muted mb-3"></i>
        <h4 class="text-muted">No courses available</h4>
        <p class="text-muted">Check back later for new courses!</p>
    </div>
}
